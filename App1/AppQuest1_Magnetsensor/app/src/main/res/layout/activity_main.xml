<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.appquest.indiana_phones.appquest1_magnetsensor.MainActivity">

    <ProgressBar
        android:id="@+id/hellworld"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501" />

    <TextView
        android:id="@+id/schatzmeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="schatzmeter"
        app:layout_constraintBottom_toTopOf="@+id/strahlung"
        tools:layout_editor_absoluteX="0dp"
        tools:text="Kein Schatz"
        android:textSize="10pt"
        android:padding="10dp" />

    <TextView
        android:id="@+id/strahlung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="strahlung"
        app:layout_constraintBottom_toTopOf="@+id/hellworld"
        tools:layout_editor_absoluteX="0dp"
        tools:text="Strahlung: "
        android:padding="10dp" />

    <SeekBar
        android:id="@+id/genauigkeit"
        android:layout_width="368dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:max="1000"
        android:progress="100"
        app:layout_constraintTop_toBottomOf="@+id/hellworld"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/genauigkeitsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Genauigkeit: 100"
        app:layout_constraintTop_toBottomOf="@+id/genauigkeit"
        tools:layout_editor_absoluteX="0dp"
        tools:text="Genauigkeit"
        android:padding="10dp" />

</android.support.constraint.ConstraintLayout>
